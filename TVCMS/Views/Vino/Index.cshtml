@model IEnumerable<TVCMS.Models.VinoViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Gestionar vinos</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create", new { controller = "Vino" },
                           new { @class = "btn btn-primary" })

    <a class="btn btn-primary py-3" href="http://localhost:3294/Subir/Index" target="_blank">Subir Imágenes</a>
</p>
<table class="table table-bordered table-hover">
    
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImagenUri)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdTipoVino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdMarca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCepa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pais)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cosecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th>
                Acciones
            </th>
        </tr>
    
@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@Html.DisplayFor(modelItem => item.ImagenUri)" width="100px" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipoVino.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Marca.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cepa.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pais)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cosecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stock)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
