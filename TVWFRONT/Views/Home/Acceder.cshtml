@model TVWFRONT.Models.UsuarioViewModel
<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Normalize -->
    <link rel="stylesheet" href="~/Content/css/normalize.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/css/bootstrap/bootstrap.min.css">
    <!-- My css-->
    <link rel="stylesheet" href="~/Content/css/generics.css">
    <!--My css-->
    <link rel="stylesheet" href="~/Content/css/main.css">
    <link rel="stylesheet" href="~/Content/css/utils.css">
    <link rel="stylesheet" href="~/Content/css/pages/login.css">
    <link rel="stylesheet" href="~/Content/css/components/footer.css">
    <link rel="stylesheet" href="~/Content/css/components/nav.css">
    <!-- Font Awesome Icons -->
    <script src="https://kit.fontawesome.com/9dca648001.js" crossorigin="anonymous"></script>
    <title>Veur - Acceder</title>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Playfair+Display:400,700|Roboto:300,400,500&display=swap"
          rel="stylesheet">
</head>
<body>
    <header class="main-header">
        <nav class="navbar navbar-expand-md  navbar-dark bg-transparent justify-content-end justify-content-md-between">
            @Html.ActionLink("Veur.", "Inicio", new { controller = "Home" },
                           new { @class = "navbar-brand text-playfair mr-auto mr-md-0" })

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-none  text-right ml-md-auto">
                    <li class="nav-item ">
                        @Html.ActionLink("Inicio", "Inicio", new { controller = "Home" },
                  new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Catalogo", "Catalogo", new { controller = "Home" },
                  new { @class = "nav-link" })
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Acceder", "Acceder", new { controller = "Home" },
                  new { @class = "nav-link" })
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <main class="main-team">
        <div class="container-fluid">
            <div class="py-4 text-center">
                <h2 class="main-title text-playfair">Iniciar Sesión</h2>
            </div>
        </div>
        <div class="team-area">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12 col-md-8 col-lg-6">
                        <!--<form class="bg-white px-5 py-4 rounded" method="post">
                            <div class="form-group">
                                <label class="lbl-text" for="exampleInputEmail1">Nombre de Usuario</label>
                                <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="usuario">
                            </div>
                            <div class="form-group">
                                <label class="lbl-text" for="exampleInputPassword1">Contraseña</label>
                                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="contraseña">
                            </div>
                            <small id="emailHelp" class="form-text text-muted mb-3">En caso de no recordar sus datos, llamar a soporte.</small>
                            <button type="submit" class="btn btn-primary btn-block bgc-wine">Ingresar</button>
                        </form>-->
                        
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal bg-white px-5 py-4 rounded">
                                @Html.ValidationSummary(true)

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Nombre, new { @class = "lbl-text" })
                                    <div class="col-md-12 px-0">
                                        @Html.EditorFor(model => model.Nombre)
                                        @Html.ValidationMessageFor(model => model.Nombre)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Contrasenia, new { @class = "lbl-text" })
                                    <div class="col-md-12 px-0">
                                        @Html.EditorFor(model => model.Contrasenia)
                                        @Html.ValidationMessageFor(model => model.Contrasenia)
                                    </div>
                                </div>


                                <small id="emailHelp" class="form-text text-muted mb-3">En caso de no recordar sus datos, llamar a soporte.</small>
                                <button type="submit" class="btn btn-primary btn-block bgc-wine">Ingresar</button>
                            </div>
                        }



                    </div>
                </div>
            </div>
        </div>
    </main>
    <footer class="main-footer text-playfair mt-4">
        <div class="container-fluid">
            <div class="py-2 d-flex justify-content-between align-items-center">
                <span class="main-footer-year text-roboto">By cbherit</span>
                <a href="#"><i class="fas fa-chevron-up"></i></a>
            </div>
        </div>
    </footer>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="~/Content/js/jquery-3.3.1.slim.min.js"
            integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
            crossorigin="anonymous"></script>
    <script src="~/Content/js/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
            crossorigin="anonymous"></script>
    <script src="~/Content/js/bootstrap.min.js"
            integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
            crossorigin="anonymous"></script>
    <script src="~/Content/js/main.js"></script>
</body>
</html>
